@page "/subscriptions"
@inherits PageBase

<RadzenText TextStyle="TextStyle.H3">Subscriptions</RadzenText>
<hr/>

<RadzenButton class="mb-3" Click="@(() => Navigation.NavigateTo("/subscriptions/add"))">Add</RadzenButton>

<RadzenDataGrid 
    Data="_subscriptions"
    LoadData="LoadData"
    Count="_totalRecords"
    AllowPaging="true"
    AllowSorting="true"
    PageSizeOptions="new[] { 10, 25, 50 }"
    PageSize="10">
    <Columns>
        <RadzenDataGridColumn 
            TItem="SubscriptionDto"
            Property="Tenant"
            Title="Tenant"
            SortProperty="TenantName">
            <Template Context="subscription">
                <RadzenText Text="@subscription.Tenant?.Name" />
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn 
            TItem="SubscriptionDto"
            Property="Tenant"
            Title="Company"
            SortProperty="TenantCompanyName">
            <Template Context="subscription">
                <RadzenText Text="@subscription.Tenant?.CompanyName" />
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn 
            TItem="SubscriptionDto"
            Property="Plan"
            Title="Subscription Plan"
            SortProperty="PlanName">
            <Template Context="subscription">
                <RadzenText Text="@subscription.Plan?.Name" />
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn 
            TItem="SubscriptionDto"
            Property="Status"
            Title="Status"
            SortProperty="Status">
        </RadzenDataGridColumn>
        <RadzenDataGridColumn 
            TItem="SubscriptionDto"
            Property="StartDate"
            Title="Start Date"
            SortProperty="StartDate">
        </RadzenDataGridColumn>
        <RadzenDataGridColumn 
            TItem="SubscriptionDto"
            Property="NextPaymentDate"
            Title="Next Payment Date"
            SortProperty="NextPaymentDate">
        </RadzenDataGridColumn>
        <RadzenDataGridColumn 
            TItem="SubscriptionDto"
            Property="TrialEndDate"
            Title="Trial End Date"
            SortProperty="TrialEndDate">
        </RadzenDataGridColumn>
        <RadzenDataGridColumn 
            TItem="SubscriptionDto"
            Property="EndDate"
            Title="End Date"
            SortProperty="EndDate">
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="SubscriptionDto" Title="Action" Sortable="false">
            <Template Context="subscription">
                <RadzenButton Click="@(() => Navigation.NavigateTo($"subscriptions/{subscription.Id}"))">Edit</RadzenButton>
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Click="() => DeleteSubscription(subscription.Id)">Delete</RadzenButton>
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>
