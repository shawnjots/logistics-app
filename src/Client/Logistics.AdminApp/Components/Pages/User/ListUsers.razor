@page "/users"
@inherits PageBase

<RadzenText TextStyle="TextStyle.H3">Tenants</RadzenText>
<hr/>

<RadzenDataGrid 
    Data="_users"
    LoadData="LoadData"
    Count="_totalRecords"
    AllowPaging="true"
    AllowSorting="true"
    PageSizeOptions="new[] { 10, 25, 50 }"
    PageSize="10">
    <Columns>
        <RadzenDataGridColumn 
            TItem="UserDto"
            Property="FirstName"
            Title="First Name">
        </RadzenDataGridColumn>
        <RadzenDataGridColumn 
            TItem="UserDto"
            Property="LastName"
            Title="Last Name">
        </RadzenDataGridColumn>
        <RadzenDataGridColumn 
            TItem="UserDto"
            Property="Email"
            Title="Email">
        </RadzenDataGridColumn>
        <RadzenDataGridColumn 
            TItem="UserDto"
            Property="PhoneNumber"
            Title="Phone Number">
        </RadzenDataGridColumn>
